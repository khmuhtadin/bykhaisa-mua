---
import Layout from '../../layouts/Layout.astro';
import Navbar from '../../components/Navbar';
import Footer from '../../components/Footer.astro';

const posts = [
  {
    slug: 'harga-mua-pontianak-2026',
    title: 'Harga MUA Pontianak 2026: Panduan Lengkap Biaya Makeup Artist',
    excerpt: 'Berapa harga makeup artist di Pontianak? Simak panduan lengkap biaya MUA untuk wedding, wisuda, dan acara lainnya di tahun 2026.',
    date: '2026-01-04',
    category: 'Tips & Harga'
  }
];
---

<Layout title="Blog | ByAnisaPutri MUA Pontianak" description="Tips makeup, panduan harga MUA, dan inspirasi look dari ByAnisaPutri Makeup Artist Pontianak.">
  <Navbar client:load />
  
  <main class="pt-32 pb-24 bg-creme min-h-screen">
    <div class="container mx-auto px-6">
      <div class="text-center mb-16">
        <h1 class="font-serif text-4xl md:text-5xl mb-4 text-clay-dark font-medium">Blog</h1>
        <p class="text-clay-dark/70 max-w-md mx-auto">Tips makeup, panduan harga, dan inspirasi look untuk hari spesialmu.</p>
        <div class="w-16 h-0.5 bg-clay mx-auto mt-6"></div>
      </div>
      
      <div class="max-w-3xl mx-auto">
        {posts.map((post) => (
          <article class="bg-white p-8 rounded-sm shadow-sm hover:shadow-md transition-shadow mb-8">
            <span class="text-xs uppercase tracking-widest text-clay font-bold">{post.category}</span>
            <h2 class="font-serif text-2xl text-clay-dark mt-2 mb-3">
              <a href={`/blog/${post.slug}`} class="hover:text-clay transition-colors">
                {post.title}
              </a>
            </h2>
            <p class="text-clay-dark/70 mb-4">{post.excerpt}</p>
            <div class="flex justify-between items-center">
              <time class="text-sm text-clay-dark/50">{new Date(post.date).toLocaleDateString('id-ID', { year: 'numeric', month: 'long', day: 'numeric' })}</time>
              <a href={`/blog/${post.slug}`} class="text-clay font-bold text-sm uppercase tracking-wider hover:text-clay-dark transition-colors">
                Baca Selengkapnya â†’
              </a>
            </div>
          </article>
        ))}
      </div>
    </div>
  </main>
  
  <Footer />
</Layout>
