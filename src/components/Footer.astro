---
const WHATSAPP_NUMBER = "6287812234804";

const vendors = [
  { category: "Attire", name: "Pontianak Kebaya", url: "#" },
  { category: "Henna", name: "Artistic Henna Pontianak", url: "#" },
  { category: "Photography", name: "Lensa Wedding", url: "#" },
];

const currentYear = new Date().getFullYear();
---

<footer class="bg-clay-dark text-bone py-20">
  <div class="container mx-auto px-6">
    <!-- Decorative Line -->
    <div
      class="w-full h-px bg-gradient-to-r from-transparent via-clay to-transparent mb-16 opacity-30"
    >
    </div>

    <div class="grid md:grid-cols-4 gap-12 mb-16">
      <div class="col-span-1 md:col-span-2">
        <h4 class="text-3xl font-serif text-creme mb-6 tracking-wide">
@byanisaputri
        </h4>
        <p class="mb-8 max-w-sm text-bone font-light leading-relaxed">
          Professional Makeup Artist & Hijab Stylist based in Pontianak. Kami
          bantu kamu tampil maksimal dengan makeup yang detail, awet, dan
          pastinya higienis.
        </p>
        <div class="flex gap-4">
          <a
            href={`https://wa.me/${WHATSAPP_NUMBER}`}
            target="_blank"
            rel="noreferrer"
            class="w-10 h-10 rounded-full bg-clay flex items-center justify-center hover:bg-green-600 hover:text-white transition duration-300"
            aria-label="WhatsApp"
          >
            <svg
              xmlns="http://www.w3.org/2000/svg"
              width="18"
              height="18"
              viewBox="0 0 24 24"
              fill="none"
              stroke="currentColor"
              stroke-width="2"
              stroke-linecap="round"
              stroke-linejoin="round"
              ><path d="M3 21l1.65-3.8a9 9 0 1 1 3.4 2.9L3 21"></path><path
                d="M9 10a.5.5 0 0 0 1 0V9a.5.5 0 0 0-1 0v1a5 5 0 0 0 5 5h1a.5.5 0 0 0 0-1h-1a.5.5 0 0 0 0 1"
              ></path></svg
            >
          </a>
          <a
            href="https://instagram.com/byanisaputri"
            target="_blank"
            rel="noreferrer"
            class="w-10 h-10 rounded-full bg-clay flex items-center justify-center hover:bg-pink-600 hover:text-white transition duration-300"
            aria-label="Instagram"
          >
            <svg
              xmlns="http://www.w3.org/2000/svg"
              width="18"
              height="18"
              viewBox="0 0 24 24"
              fill="none"
              stroke="currentColor"
              stroke-width="2"
              stroke-linecap="round"
              stroke-linejoin="round"
              ><rect width="20" height="20" x="2" y="2" rx="5" ry="5"
              ></rect><path d="M16 11.37A4 4 0 1 1 12.63 8 4 4 0 0 1 16 11.37z"
              ></path><line x1="17.5" x2="17.51" y1="6.5" y2="6.5"></line></svg
            >
          </a>
          <a
            href="https://tiktok.com/@byanisaputri"
            target="_blank"
            rel="noreferrer"
            class="w-10 h-10 rounded-full bg-clay flex items-center justify-center hover:bg-black hover:text-white transition duration-300 group"
            aria-label="TikTok"
          >
            <svg
              xmlns="http://www.w3.org/2000/svg"
              width="18"
              height="18"
              viewBox="0 0 24 24"
              fill="none"
              stroke="currentColor"
              stroke-width="2"
              stroke-linecap="round"
              stroke-linejoin="round"
              ><path d="M9 12a4 4 0 1 0 4 4V4a5 5 0 0 0 5 5"></path></svg
            >
          </a>
          <a
            href="https://g.co/kgs/3HwCGfL"
            target="_blank"
            rel="noreferrer"
            class="w-10 h-10 rounded-full bg-clay flex items-center justify-center hover:bg-blue-600 hover:text-white transition duration-300"
            aria-label="Google Business Profile"
          >
            <svg
              xmlns="http://www.w3.org/2000/svg"
              width="18"
              height="18"
              viewBox="0 0 24 24"
              fill="none"
              stroke="currentColor"
              stroke-width="2"
              stroke-linecap="round"
              stroke-linejoin="round"
              ><path d="M12 2a10 10 0 1 0 10 10A10 10 0 0 0 12 2z"></path><path d="M12 8v8"></path><path d="M8 12h8"></path></svg
            >
          </a>
        </div>
      </div>

      <div>
        <h4 class="text-creme font-bold uppercase tracking-widest mb-6 text-xs">
          Layanan
        </h4>
        <ul class="space-y-3 text-sm">
          <li>
            <a href="#services" class="hover:text-creme transition-colors"
              >Wedding</a
            >
          </li>
          <li>
            <a href="#services" class="hover:text-creme transition-colors"
              >Bridesmaid</a
            >
          </li>
          <li>
            <a href="#services" class="hover:text-creme transition-colors"
              >Engagement</a
            >
          </li>
          <li>
            <a href="#services" class="hover:text-creme transition-colors"
              >Wisuda & Yudisium</a
            >
          </li>
        </ul>
      </div>

      <div>
        <h4 class="text-creme font-bold uppercase tracking-widest mb-6 text-xs">
          Partner Vendors
        </h4>
        <ul class="space-y-3 text-sm">
          {
            vendors.map((vendor) => (
              <li>
                <a href={vendor.url} class="group flex flex-col">
                  <span class="text-xs text-oak group-hover:text-bone transition-colors">
                    {vendor.category}
                  </span>
                  <span class="text-bone group-hover:text-creme transition-colors">
                    {vendor.name}
                  </span>
                </a>
              </li>
            ))
          }
        </ul>
      </div>
    </div>

    <div
      class="border-t border-clay pt-8 flex flex-col md:flex-row justify-between items-center text-xs text-oak"
    >
      <p>&copy; {currentYear} ByAnisaPutri. All rights reserved.</p>
      <div class="flex gap-6 mt-4 md:mt-0">
        <span>Pontianak, Kalimantan Barat</span>
        <a href="/privacy-policy" class="hover:text-creme">Privacy Policy</a>
      </div>
    </div>
  </div>
</footer>
